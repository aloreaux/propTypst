            <li><a class="dropdown-item enable-toggle" href="#" onclick="toggleSection('Value', false)">Disable</a>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li><a class="dropdown-item" href="#" onclick="togglePar('Value', true)">Paragraph</a></li>
            <li><a class="dropdown-item" href="#" onclick="togglePar('Value', false)">Item</a></li>
          </ul>
        </div>
        <input type="text" name="summarySectionName" value="Value" class="form-control section-title" disabled />
        <button class="btn btn-primary add-item-btn" onclick="addField(this, false)">Add Item</button>
      </div>

      <div class="summary-items px-2">
        <div class="input-group mb-2">
          <span class="input-group-text">Item</span>
          <input type="text" class="form-control summary-input" name="ValueText" required />
          <textarea class="form-control summary-textarea" name="ValueArea" rows="3" style="display: none;"
            disabled></textarea>
        </div>
      </div>
    </div>
  </div>
</div>
