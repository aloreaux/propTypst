        const fields = section.querySelectorAll("input, textarea, button");
        fields.forEach(field => {
          field.disabled = !checkbox.checked;
        })
      }
    });

    updateNextBtnState();

    observer.observe(investmentContainer, {
      childList: true,
      subtree: true, // capture inputs added deeper in the tree
    });
  });
</script>
